<?Mapper version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shopx.goods.dao.mapper.EsBrandMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.shopx.goods.dao.entity.EsBrand">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="logo" property="logo" />
        <result column="is_del" property="isDel" />
    </resultMap>

    <select id="getBrandsByCategory" resultType="com.shopx.goods.api.model.domain.EsBrandDO">
            SELECT
                b.id,
                b.`name`,
                b.logo
            FROM
                es_category_brand cb
                INNER JOIN es_brand b ON cb.brand_id = b.id
            WHERE
                cb.category_id =#{categoryId}
                AND b.is_del = 0
    </select>
</mapper>
