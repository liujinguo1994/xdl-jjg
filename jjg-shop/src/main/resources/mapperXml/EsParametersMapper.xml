<?Mapper version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shopx.goods.dao.mapper.EsParametersMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.shopx.goods.dao.entity.EsParameters">
        <id column="id" property="id" />
        <result column="param_name" property="paramName" />
        <result column="param_type" property="paramType" />
        <result column="options" property="options" />
        <result column="is_index" property="isIndex" />
        <result column="required" property="required" />
        <result column="group_id" property="groupId" />
        <result column="category_id" property="categoryId" />
        <result column="sort" property="sort" />
    </resultMap>
    <select id="getParametersList" resultType="com.shopx.goods.api.model.domain.EsParametersDO">
            select p.*,gp.param_value,p.group_id
                from es_parameters p
               left join es_goods_params gp on p.id=gp.param_id where p.category_id = #{categoryId}
                and gp.goods_id =#{goodsId}
    </select>
    <select id="getDraftParametersList" resultType="com.shopx.goods.api.model.domain.EsParametersDO">
            select p.*,gp.param_value,p.group_id
                from es_parameters p
               left join es_draft_goods_params gp on p.id=gp.param_id where p.category_id = #{categoryId}
                and gp.draft_goods_id =#{goodsId}
    </select>

</mapper>
